- if layout
  - extends "ekklesia_portal/layout.j2.jade"

- block title
  title
    = brand_title
    |&nbsp;-&nbsp;
    = _('voting_phase')
    |&nbsp;-&nbsp;
    = title or phase_type.name


- block content

  .voting_phase.container
    h4
      a(href=self_link)= title or phase_type.name
      if name
        |&nbsp;({{ name }})

      if show_edit_button
        a.edit_button(href=edit_url)
          i.far.fa-edit
          |&nbsp;
          = _('edit_button')

    dl
      dt= _('voting_phase_type')
      dd= phase_type.name
      dt= _('voting_status')
      dd= status|enum_value
      dt= _('target_date')
      dd
        if target
          = target|dateformat
        else
          = _('not_determined')
      dt= _('department')
      dd= department.name
      dt= _('ballots')
      dd= ballots|length
      dt= _('propositions')
      dd= propositions|length

    if options.show_description
      .description
        = description|markdown

    if show_voting and votings
      h4= _('votings')
      .voting_from_to= _('voting_start_end', start=voting_start|datetimeformat, end=voting_end|datetimeformat)

      ul.votings
        for title, url in votings
          li
            a(href=url)= title

    if options.show_proposition_list and propositions
      h4= _('propositions')
      = render_cell(collection=propositions)
