- extends "layout.j2.jade"
- from "question_macros.j2.jade" import question_box
- from "argument_macros.j2.jade" import argument_box_full

- block title
  title= argument.title

- block content
  question = argument.question

  #content_wide
    .thin
      .question_tabs
        .tab
          a(href=url_for("question", question_url=question.url))= _("discussion")
        .tab
          a(href="#")= _("follow")
        .tab.tab_active.tab_arg_pro
          a(href=url_for("argument", question_url=question.url, argument_url=argument.url))
          = _("argument")
          |:
          = argument.title

      = question_box(question, current_user, no_margin=True, voting=True, user=current_user)
    
    .argument_container_full
        = argument_box_full(argument, current_user)


