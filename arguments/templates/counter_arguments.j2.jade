- extends "layout.j2.jade"
- from "argument_macros.j2.jade" import argument_box, counter_argument_box

- block title
  title= argument.title

- block content
  question = argument.question
  counter_arguments = argument.counter_arguments.all()

  #content_wide
    .thin
      .question_tabs
        .tab
          a(href=url_for("question", question_url=question.url))= _("discussion")
        .tab
          a(href="#")= _("follow")
        .tab.tab_active.tab_arg_pro
          a(href=url_for("argument", question_url=question.url, argument_url=argument.url))
          = _("counterarguments_for")
          |:
          = argument.title

      = argument_box(argument, g.user, extended=True)

          
    .argument_container
      for ca in counter_arguments
        .argument_wrapper
          = counter_argument_box(ca, g.user)

      #argument_wrapper_54_303.argument_wrapper
        .argument.argument_pro_no_counter
          .stats.argument_stats
            .points.argument_points 2399
            .points_text.argument_points_text Punkte
            form
              .vote_up.argument_vote_up.vote_up_inactive
              .vote_dn.argument_vote_dn

          .argument_headline
            a(href="GP/p/arg") Ich halte das für eine super Idee

          .argument_abstract Schön wärs, total geile Idee!
            a.read_more(href="GP/p/arg")

          .author.question_author Eingetragen vor 2 Minuten von t
          .argument_con_bar

    
      a.add-new-argument(href="{{ argument.url }}/ca/new/") 
        .button_argument.button_new_counter_argument
          span Gegenargument hinzufügen


